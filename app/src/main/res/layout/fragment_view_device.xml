<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".serial.ViewDevice"
    android:background="?android:windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geiger Counter:"
            android:layout_marginBottom="10sp"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/device_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\?\?\?\n"
            android:layout_marginRight="5dp"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/view_data_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="View Data"
            android:textStyle="bold"
            style="@style/ButtonStyle"/>

        <Button
            android:id="@+id/load_data_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Download and View"
            android:textStyle="bold"
            style="@style/ButtonStyle"/>

        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Connected\nConnecting..."
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

</FrameLayout>